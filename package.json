{
    "name": "tradingview-vue",
    "version": "0.0.0-development",
    "private": false,
    "description": "tradingview widgets for Vue3 and Nuxt3",
    "author": "Ehsan Shahvirdi",
    "license": "MIT",
    "keywords": [
        "vue",
        "nuxt",
        "vue3",
        "tradingview",
        "chart",
        "cryptomarket",
        "typescript"
    ],
    "type": "module",
    "main": "./dist/tradingview-vue.umd.cjs",
    "module": "./dist/tradingview-vue.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/tradingview-vue.js",
            "require": "./dist/tradingview-vue.umd.cjs"
        },
        "./*": "./dist/tradingview-vue.js"
    },
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc && vite build",
        "preview": "vite preview",
        "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
        "format": "prettier .  --write --ignore-path .gitignore",
        "prepare": "husky install",
        "commit": "git-cz",
        "semantic-release": "semantic-release"
    },
    "dependencies": {
        "vue": "^3.2.45"
    },
    "devDependencies": {
        "@rushstack/eslint-patch": "^1.1.4",
        "@types/node": "^18.11.12",
        "@vitejs/plugin-vue": "^4.0.0",
        "@vue/eslint-config-prettier": "^7.0.0",
        "@vue/eslint-config-typescript": "^11.0.0",
        "@vue/tsconfig": "^0.1.3",
        "cz-conventional-changelog": "3.3.0",
        "eslint": "^8.22.0",
        "eslint-plugin-vue": "^9.3.0",
        "husky": "^8.0.0",
        "lint-staged": "^13.1.0",
        "npm-run-all": "^4.1.5",
        "pathe": "^1.1.0",
        "prettier": "^2.7.1",
        "typescript": "~4.7.4",
        "vite": "^4.0.0",
        "vite-plugin-dts": "^1.7.1",
        "vue-tsc": "^1.0.12",
        "semantic-release": "^20.1.0"
    },
    "lint-staged": {
        "*.{js,ts,vue}": "eslint --fix",
        "*.{js,ts,vue,css,scss,json,md}": "prettier --write"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ehsan-shv/vue-tradingviewWidgets.git"
    },
    "publishConfig": {
        "access": "public"
    }
}
